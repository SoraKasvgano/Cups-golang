<SCRIPT TYPE="text/javascript"><!--
function update_paramtable(option)
{
  var cb = document.getElementById("select-" + option)
  var paramstable = document.getElementById(option + "-params");
  if (!cb || !paramstable)
    return;
  var show = false;
  if (cb.multiple) {
    for (var i = 0; i < cb.options.length; i ++) {
      if (cb.options[i].selected && cb.options[i].value.toLowerCase().indexOf("custom") === 0) {
        show = true;
        break;
      }
    }
  } else if (cb.value.toLowerCase().indexOf("custom") === 0) {
    show = true;
  }
  paramstable.style.display = show ? "table" : "none";
}
--></SCRIPT>

